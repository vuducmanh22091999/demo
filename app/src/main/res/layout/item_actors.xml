<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemActors_imgActors"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/img_actors"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/itemActors_tvNameActors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="230dp"
        android:text="@string/name_actors"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/itemActors_imgActors"
        app:layout_constraintTop_toTopOf="@id/itemActors_imgActors" />

    <ImageView
        android:id="@+id/itemActors_imgLike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_like"
        app:layout_constraintStart_toStartOf="@id/itemActors_tvNameActors"
        app:layout_constraintTop_toBottomOf="@id/itemActors_tvNameActors"/>

    <TextView
        android:id="@+id/itemActors_tvYouLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/you_like"
        android:textColor="@color/color_number_like_actors"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemActors_imgLike"
        app:layout_constraintStart_toEndOf="@id/itemActors_imgLike"
        app:layout_constraintTop_toTopOf="@id/itemActors_imgLike" />

    <TextView
        android:id="@+id/itemActors_tvNumberLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/number_year"
        android:textSize="12sp"
        android:textColor="@color/color_number_like_actors"
        app:layout_constraintStart_toEndOf="@id/itemActors_tvYouLike"
        app:layout_constraintTop_toTopOf="@id/itemActors_tvYouLike" />

    <TextView
        android:id="@+id/itemActors_tvMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/movies"
        android:textSize="12sp"
        android:textColor="@color/color_number_like_actors"
        app:layout_constraintStart_toEndOf="@id/itemActors_tvNumberLike"
        app:layout_constraintTop_toTopOf="@id/itemActors_tvNumberLike" />
</androidx.constraintlayout.widget.ConstraintLayout>