<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color"
    android:padding="8dp">

    <ImageView
        android:id="@+id/itemMoviesSearch_imgPosterMovies"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_poster"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/itemMoviesSearch_tvTitleMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/the_walking_dead"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/itemMoviesSearch_imgPosterMovies"
        app:layout_constraintStart_toEndOf="@id/itemMoviesSearch_imgPosterMovies"
        app:layout_constraintTop_toTopOf="@id/itemMoviesSearch_imgPosterMovies" />

    <TextView
        android:id="@+id/itemMoviesSearch_tvEvaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/evaluate"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/itemMoviesSearch_tvTitleMovies"
        app:layout_constraintTop_toBottomOf="@id/itemMoviesSearch_tvTitleMovies" />

    <TextView
        android:id="@+id/itemMoviesSearch_tvPointEvaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/point_evaluate"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/itemMoviesSearch_tvEvaluate"
        app:layout_constraintTop_toTopOf="@id/itemMoviesSearch_tvEvaluate" />

</androidx.constraintlayout.widget.ConstraintLayout>